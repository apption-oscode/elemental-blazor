<AeThemeProvider>
    <Router AppAssembly="@typeof(AElemental.Documentation.Server.Program).Assembly"
            AdditionalAssemblies="new[] {typeof(AElemental.Documentation.DocumentationTools).Assembly}">
        <Found Context="routeData">
            <RouteView RouteData="@routeData" DefaultLayout="@typeof(AElemental.Documentation.Shared.MainLayout)"/>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(AElemental.Documentation.Shared.MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
    <AeModal/>
</AeThemeProvider>