    Title: Indeterminate Checkbox
    Description: A checkbox that has the indeterminate state. Represents a checkbox that is partially checked or unchecked.
*@
<AeCheckbox @bind-Checked="@_checked" 
            Indeterminate="@_indeterminate" 
            LabelText="@($"Toggle checked: {_checked}")" />

<AeCheckbox @bind-Checked="@_indeterminate"
            LabelText="@($"Toggle Indeterminate: {_indeterminate}")" />

@code {
    private bool _checked;
    private bool _indeterminate = true;
}