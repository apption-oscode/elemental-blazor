<AeTypography>Selected item: @_selectedItem</AeTypography>

<AeDropdown @bind-Value="_selectedItem">
    <AeDropdownItem Value="foo">Foo</AeDropdownItem>
    <AeDropdownItem Value="bar">Bar</AeDropdownItem>
    <AeDropdownItem Value="baz">Baz</AeDropdownItem>
</AeDropdown>

@code {
    private string _selectedItem;
}
