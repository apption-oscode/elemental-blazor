<AeTable Accessors="accessorFunctions"
       Dataset="data"
       Headers="headers" 
       AddToolTip="true"/>


@code {

    // Define the headers at the top of the table
    private List<string> headers = new List<string>
    {
        "Message"
    };

    // Typeparam class to hold row data, can be anything
    private List<string> data = new List<string>
    {
        "This is a long message number 1",
        "This is a much longer message number 2",
        "This is a much much longer message number 3",
        "This is a much much much longer message number 4",
        "This is a much much much much much longer message number 5",
        "This is a much much much much much much longer message number 6",
        "This is a much much much much much much much much much much much much much much much much much much much much much much much much much much much much much much much much much much much much much much much much much much much much much much much longer message number 7",
        "This is a short message."
    };

    // Accessor functions to retrieve cell value
    private List<Func<string, string>> accessorFunctions = new List<Func<string, string>>
    {
        new Func<string, string>(item => { return item; })
    };
}