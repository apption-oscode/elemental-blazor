@using AElemental.Services
@inject UIControlsService UIControlService

<AeButton @onclick="ShowModal">Show Modal Box</AeButton>

@code {

    private void ShowModal()
    {
        RenderFragment modalContent = @<div>
                                            <p>Content</p>
                                            <p>Content</p>
                                            <p>Content</p>
                                        </div>;
        UIControlService.ToggleModal("Default", modalContent);
    }


}