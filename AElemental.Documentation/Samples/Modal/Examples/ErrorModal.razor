@using AElemental.Services

@inject UIControlsService UIControlService

<AeButton @onclick="ShowModal">Show Error Message Modal</AeButton>

@code {

    private void ShowModal()
    {
        UIControlService.ToggleModal(null, 
            @<AeModalErrorBody 
                Icon="error-warning"
                Title="Something went wrong..."
                ErrorMessage="ERROR_CODE_007: This error is licensed to kill (the process)" 
            />
        );
    }
}