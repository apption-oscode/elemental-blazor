    Title: Select Component
    Description: The select component allows users to choose one option from a list. It is used in forms for users to submit data.
*@

<AeTypography>Selection: @_selectValue</AeTypography>

<AeSelect
    HelperText="Optional helper text"
    LabelText="Select"
    Placeholder="Optional placeholder text">
    
    <AeSelectItemGroup Label="Category 1">
        <AeSelectItem Value="all">All</AeSelectItem>
        <AeSelectItem Value="cloudFoundry">Cloud Foundry</AeSelectItem>
    </AeSelectItemGroup>

    <AeSelectItemGroup Label="Category Disabled" Disabled>
        <AeSelectItem Value="1">Option 1</AeSelectItem>
        <AeSelectItem Value="2">Option 2</AeSelectItem>
    </AeSelectItemGroup>

    <AeSelectItemGroup Label="Category 2">
        <AeSelectItem Value="staging">Staging</AeSelectItem>
        <AeSelectItem Value="dea">DEA</AeSelectItem>
        <AeSelectItem Value="router">Router</AeSelectItem>
    </AeSelectItemGroup>
</AeSelect>

@code {

    private string _selectValue;
    
    private void OnSelectValueChanged(string value)
    {
        _selectValue = value;
    }
}