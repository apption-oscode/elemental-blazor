<AeTooltip>
    <ChildContent>
        <AeTypography>
            This is some tooltip text. This box shows the maximum amount of text that should appear inside. If more room is needed
            please use a modal instead.
        </AeTypography>
    </ChildContent>
    <Footer>
        <AeButton Kind="@AeButton.ButtonAppearance.Ghost" href="#">Learn More</AeButton>
        <AeButton Kind="@AeButton.ButtonAppearance.Primary" href="#">Create</AeButton>
    </Footer>
</AeTooltip>