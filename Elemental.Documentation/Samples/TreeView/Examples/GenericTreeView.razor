<div>
  <AeTreeViewGeneric T="string" Roots="Roots" RenderItem="RenderItem" FetchChildren="GetChildren"/>
</div>

@code {
    private string lastItemClicked;
    public List<string> Roots = new List<string>(new string[] { "server1", "server2", "server3" });

    public List<string> GetChildren(string root)
    {
        var returnList = new List<string>();
        var objectType = "";
        if (root.Contains("server"))
            objectType = "database";
        else if (root.Contains("database"))
            objectType = "table";
        else if (root.Contains("table"))
            objectType = "field";
        else if (root.Contains("field"))
            return returnList;
        for (int i=1; i<=3; i++)
        {
            returnList.Add(objectType + i);
        }
        return returnList;
    }

    public RenderFragment RenderItem(string root){
        return @<div>@root</div>;
    }
}